<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.AnythingGroup.ExtendedApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnythingGroup">

        <activity
            android:screenOrientation="portrait"
            android:name="com.example.AnythingGroup.StartActivity"
            android:theme="@style/Theme.AnythingGroup.NoActionBar"
            android:exported="true"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:name="com.example.AnythingGroup.MainActivity"
            android:theme="@style/Theme.AnythingGroup.NoActionBar"
            android:exported="true"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="fullSensor"
            android:configChanges = "orientation|screenSize|screenLayout"
            android:launchMode="singleTop"
            android:name="com.example.AnythingGroup.VideoViewActivity"
            android:theme="@style/Theme.AnythingGroup.NoActionBar"
            android:exported="true">
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <!-- Removing the default WorkManager initializer -->
            <!-- Replacing with a new one in the ExtendedApplication class -->
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>
    </application>
</manifest>